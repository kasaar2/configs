# SSH Configuration Template
# Copy this file to ~/.ssh/config and customize for your needs
# Usage: cp ssh/config.template ~/.ssh/config

# Global defaults for all hosts
Host *
    # Add SSH keys to agent automatically (macOS)
    AddKeysToAgent yes

    # Use macOS keychain for SSH keys (macOS only)
    # UseKeychain yes

    # Keep connections alive
    ServerAliveInterval 60
    ServerAliveCountMax 10

    # Connection multiplexing for faster subsequent connections
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h-%p
    ControlPersist 600

    # Forward agent for git operations on remote servers
    ForwardAgent no

    # Preferred authentication methods
    PreferredAuthentications publickey,keyboard-interactive,password

# GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    # Or use your specific key: IdentityFile ~/.ssh/github_key

# GitHub (alternate alias)
Host gh
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519

# GitLab
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519

# Bitbucket
Host bitbucket.org
    HostName bitbucket.org
    User git
    IdentityFile ~/.ssh/id_ed25519

