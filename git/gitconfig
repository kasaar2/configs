[user]
    # Configure your name and email
    name = Your Name
    email = your.email@example.com

[core]
    excludesfile = ~/.gitignore_global
    editor = nvim
    autocrlf = input

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --graph --oneline --decorate --all
    last = log -1 HEAD
    unstage = reset HEAD --
    amend = commit --amend --no-edit

[pull]
    rebase = false

[push]
    default = current
    followTags = true

[init]
    defaultBranch = main

[diff]
    tool = vimdiff
    colorMoved = zebra

[merge]
    conflictstyle = diff3

[color]
    ui = auto

[fetch]
    prune = true

[rebase]
    autoStash = true
